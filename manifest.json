{
  "manifest_version": 3,
  "name": "JobIntel Demo",
  "version": "1.0",
  "description": "Simple demo extension that reads the page title.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon-16x16.png",
      "48": "favicon-32x32.png",
      "246": "apple-touch-icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
